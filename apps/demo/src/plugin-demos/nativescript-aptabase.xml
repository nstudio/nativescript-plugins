<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Aptabase" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Initialize Aptabase" tap="{{ init }}" class="btn btn-primary"/>
            <Button text="Track Event" tap="{{ trackEvent }}" class="btn btn-primary"/>
            <Button text="Track with Data" tap="{{ trackEventWithData }}" class="btn btn-primary"/>

          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>